<section class="promo-banner" style="background-color: {{ section.settings.bg_color }}; padding: 60px 0; text-align: center;">
  <div class="container">
    <h2 class="promo-title">{{ section.settings.heading }}</h2>
    <p class="promo-subheading">{{ section.settings.subheading }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="promo-button" style="background-color: {{ section.settings.button_color }};">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  .promo-banner .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .promo-banner .promo-title {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .promo-banner .promo-subheading {
    font-size: 1.25rem;
    margin-bottom: 1.25rem;
  }
  .promo-banner .promo-button {
    color: #fff;
    padding: 0.75rem 2rem;
    font-size: 1rem;
    text-transform: uppercase;
    border-radius: 4px;
    text-decoration: none;
  }
</style>

{% schema %}
{
  "name": "Promotional Banner",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background color", "default": "#f8f9fa" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Exclusive Offer" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Shop our summer collection" },
    { "type": "text", "id": "button_text", "label": "Button text", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button link", "default": "/collections/all" },
    { "type": "color", "id": "button_color", "label": "Button color", "default": "#007bff" }
  ],
  "presets": [
    { "name": "Promotional Banner", "category": "Custom" }
  ]
}
{% endschema %}
